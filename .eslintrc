{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },

    "plugins": [
        "react",
        "import"
    ],

    "extends": ["eslint:recommended", "plugin:react/recommended"],

    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true,
            "classes": true,
            "experimentalObjectRestSpread": true
        },
        "sourceType" : "module"
    },

    "settings" : {
        "import/resolver" : { "node" : { "moduleDirectory" : ["lib/nodejs", "node_modules", "bower_components"] } }
    },

    "rules": {
        "accessor-pairs": 2,
        "array-bracket-spacing": 0,
        "array-callback-return": 0,
        "arrow-body-style": [0, "as-needed", { "requireReturnForObjectLiteral": true }],
        "arrow-parens": 0,
        "arrow-spacing": [2, { "before": true, "after": true }],
        "block-scoped-var": 0,
        "block-spacing": [2, "always"],
        "brace-style": 0,
        "callback-return": 0,
        "camelcase": 0,
        "comma-dangle": [
            2,
            "only-multiline"
        ],
        "comma-spacing": [2, {"before": false, "after": true}],
        "comma-style": 0,
        "complexity": 0,
        "computed-property-spacing": 0,
        "consistent-return": 0,
        "consistent-this": 0,
        "curly": 0,
        "default-case": 0,
        "dot-location": [
            2,
            "property"
        ],
        "dot-notation": 0,
        "eol-last": 0,
        "eqeqeq": 0,
        "func-names": 0,
        "func-style": 0,
        "generator-star-spacing": 2,
        "global-require": 0,
        "guard-for-in": 0,
        "handle-callback-err": 2,
        "id-blacklist": 2,
        "id-length": 0,
        "id-match": 2,
        "indent": 0,
        "init-declarations": 0,
        "jsx-quotes": 2,

        "key-spacing": [0, {
            "singleLine": {
                "beforeColon": false,
                "afterColon": true
            },
            "multiLine": {
                "beforeColon": true,
                "afterColon": true,
                "align": "colon"
            }
        }],

        "keyword-spacing": [
            2, {
                "before": true,
                "after": true
            }
        ],
        "linebreak-style": [
            0,
            "unix"
        ],
        "lines-around-comment": 0,
        "max-depth": 0,
        "max-len": 0,
        "max-nested-callbacks": 2,
        "max-params": 0,
        "new-parens": 0,
        "newline-after-var": 0,
        "newline-per-chained-call": 0,
        "no-alert": 2,
        "no-array-constructor": 2,
        "no-bitwise": 0,
        "no-caller": 2,
        "no-catch-shadow": 0,
        "no-cond-assign": [2, "except-parens"],
        "no-confusing-arrow": [2, { "allowParens" : true }],
        "no-constant-condition": [2, { "checkLoops": false }],
        "no-continue": 0,
        "no-div-regex": 2,
        "no-else-return": 0,
        "no-empty": [2, { "allowEmptyCatch": true }],
        "no-empty-function": 0,
        "no-eq-null": 0,
        "no-eval": 0,
        "no-extend-native": 0,
        "no-extra-bind": 2,
        "no-extra-label": 2,
        "no-extra-parens": 0,
        "no-extra-semi" : 0,
        "no-floating-decimal": 0,
        "no-implicit-coercion": [
            2,
            {
                "boolean": false,
                "number": false,
                "string": false
            }
        ],
        "no-implicit-globals": 2,
        "no-implied-eval": 2,
        "no-inline-comments": 0,
        "no-inner-declarations": [
            2,
            "functions"
        ],
        "no-invalid-this": 0,
        "no-iterator": 2,
        "no-label-var": 2,
        "no-labels": 2,
        "no-lone-blocks": 0,
        "no-lonely-if": 0,
        "no-loop-func": 0,
        "no-magic-numbers": 0,
        "no-mixed-requires": 2,
        "no-multi-spaces": 0,
        "no-multi-str": 2,
        "no-multiple-empty-lines": 0,
        "no-native-reassign": 0,
        "no-negated-condition": 0,
        "no-nested-ternary": 0,
        "no-new": 2,
        "no-new-func": 0,
        "no-new-object": 2,
        "no-new-require": 2,
        "no-new-wrappers": 0,
        "no-octal-escape": 2,
        "no-param-reassign": 0,
        "no-path-concat": 0,
        "no-plusplus": 0,
        "no-process-env": 0,
        "no-process-exit": 0,
        "no-proto": 2,
        "no-restricted-imports": 2,
        "no-restricted-modules": 2,
        "no-restricted-syntax": 2,
        "no-return-assign": 0,
        "no-script-url": 2,
        "no-self-compare": 0,
        "no-sequences": 0,
        "no-shadow": 0,
        "no-shadow-restricted-names": 0,
        "no-spaced-func": 0,
        "no-sync": 0,
        "no-ternary": 0,
        "no-throw-literal": 0,
        "no-trailing-spaces": 0,
        "no-undef-init": 2,
        "no-undefined": 0,
        "no-underscore-dangle": 0,
        "no-unmodified-loop-condition": 0,
        "no-unneeded-ternary": 0,
        "no-unused-expressions": 0,
        "no-unused-vars": ["error", { "caughtErrorsIgnorePattern": "^(ignore.*|_.+)", "argsIgnorePattern": "^(next|_.+)$" }],
        "no-use-before-define": 0,
        "no-useless-call": 0,
        "no-useless-concat": 0,
        "no-useless-constructor": 2,
        "no-var": 2,
        "no-void": 0,
        "no-warning-comments": 0,
        "no-whitespace-before-property": 0,
        "no-with": 2,
        "object-curly-spacing": 0,
        "object-shorthand": 0,
        "one-var": 0,
        "one-var-declaration-per-line": 0,
        "operator-assignment": 0,
        "operator-linebreak": 0,
        "padded-blocks": 0,
        "prefer-arrow-callback": 0,
        "prefer-const": 2,
        "prefer-reflect": 0,
        "prefer-rest-params": 0,
        "prefer-spread": 0,
        "prefer-template": 0,
        "quote-props": 0,
        "quotes": 0,
        "radix": 0,
        "require-jsdoc": 0,
        "require-yield": 2,
        "semi": [1, "always"],
        "semi-spacing": [2, { "before": false, "after": true }],
        "sort-imports": 0,
        "sort-vars": 0,
        "space-before-blocks": 0,
        "space-before-function-paren": 0,
        "space-in-parens": 0,
        "space-infix-ops": [2, { "int32Hint": true }],
        "space-unary-ops": 0,
        "spaced-comment": 0,
        "strict": [0, "global"],
        "template-curly-spacing": 2,
        "valid-jsdoc": 0,
        "vars-on-top": 0,
        "wrap-iife": 0,
        "wrap-regex": 0,
        "yield-star-spacing": 2,
        "yoda": 0,

        "react/display-name": 0,
        "react/jsx-boolean-value": 0,
        "react/jsx-closing-bracket-location": 1,
        "react/jsx-curly-spacing": 1,
        "react/jsx-max-props-per-line": 0,
        "react/jsx-indent-props": 0,
        "react/jsx-no-duplicate-props": 1,
        "react/jsx-no-undef": 1,
        "react/jsx-sort-prop-types": 0,
        "react/jsx-sort-props": 0,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/no-danger": 0,
        "react/no-set-state": 0,
        "react/no-did-mount-set-state": 1,
        "react/no-did-update-set-state": 1,
        "react/no-multi-comp": 0,
        "react/no-unknown-property": 1,
        "react/prop-types": 1,
        "react/react-in-jsx-scope": 1,
        "react/self-closing-comp": 1,
        "react/sort-comp": 1,
        "react/jsx-wrap-multilines": 1,

        "import/named" : 1,
        "import/no-unresolved" : [1, { "commonjs": true, "amd": true }],
        "import/namespace": 1,
        "import/default": 1,
        "import/export": 1
    }
}
